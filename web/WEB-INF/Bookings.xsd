<xs:schema
 xmlns:xs="http://www.w3.org/2001/XMLSchema"
 targetNamespace="http://www.uts.edu.au/31284/wsdtutor"
 xmlns="http://www.uts.edu.au/31284/wsdtutor"
 elementFormDefault="qualified">
 
    <xs:simpleType name="name">
        <xs:restriction base ="xs:string">
            <xs:pattern value ="([A-Z][a-z]+\s)*([A-Z][a-z]+\s*)"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="id">
        <xs:restriction base ="xs:integer">
            <xs:pattern value ="\d"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="email">
        <xs:restriction base ="xs:string">
            <xs:pattern value ="\S+@\S+"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="subject">
    <xs:restriction base ="xs:string">
        <xs:pattern value ="WSD|USP|SEP|AppProg|MobileApp"/>
    </xs:restriction>
</xs:simpleType>
<xs:simpleType name="status">
    <xs:restriction base ="xs:string">
        <xs:pattern value ="Active|Cancelled|Completed"/>
    </xs:restriction>
</xs:simpleType>
    <xs:element name ="bookings">
        <xs:complexType>
            <xs:sequence>
                <xs:element name ="booking" maxOccurs ="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name ="id" type="id"/>
                            <xs:element name = "studentEmail" type= "email"/>
                            <xs:element name = "studentName" type = "name"/>
                            <xs:element name = "tutorEmail" type= "email"/>
                            <xs:element name = "tutorName" type = "name"/>                        
                            <xs:element name = "subject" type = "subject"/>
                            <xs:element name = "status" type ="status"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>           
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>

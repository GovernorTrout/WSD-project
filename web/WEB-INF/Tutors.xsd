<xs:schema
 xmlns:xs="http://www.w3.org/2001/XMLSchema"
 targetNamespace="http://www.uts.edu.au/31284/wsdtutor"
 xmlns="http://www.uts.edu.au/31284/wsdtutor"
 elementFormDefault="qualified">
 
    <xs:simpleType name="name">
        <xs:restriction base ="xs:string">
            <xs:pattern value ="([A-Z][a-z]+\s)*([A-Z][a-z]+\s*)"/>
        </xs:restriction>
    </xs:simpleType>
        <xs:simpleType name="email">
        <xs:restriction base ="xs:string">
            <xs:pattern value ="[A-Za-z\.\_]+@([a-z\-\.]+)+\.[a-z]+"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:element name ="tutors">
        <xs:complexType>
            <xs:sequence>
                <xs:element name ="tutor" maxOccurs ="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name = "name" type= "name"/>
                            <xs:element name = "email" type= "email"/>
                            <xs:element name = "password" type = "xs:string"/>
                            <xs:element name = "type" type = "xs:string"/>                         
                            <xs:element name = "dob" type = "xs:string"/> 
                            <xs:element name = "subject" type = "xs:string"/>
                            <xs:element name = "avail" type ="xs:string"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>           
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
